	<data>
		<dataDB className="ghty.dao.impl.DataBase">
			<param key="driver" value="" />
			<param key="dbUrl" value="" />
			<param key="dbUser" value="" />
			<param key="dbPwd" value="" />
		</dataDB>
		<dataDisk className="ghty.dao.impl.DataDisk">
			<param key="path" value="" />
		</dataDisk>
	</data>
